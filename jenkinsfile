pipeline {
    agent any

    stages {
        stage('Update System') {
            steps {
                script {
                    echo 'Updating the system...'
                    // Run system update and upgrade commands with root privileges
                    sh '''
                    sudo apt-get update
                    sudo apt-get upgrade -y
                    '''
                }
            }
        }

        stage('Show Date and Time') {
            steps {
                script {
                    echo 'Showing current date and time...'
                    // Display the current date and time
                    sh 'date'
                }
            }
        }
    }

    post {
        success {
            echo 'System updated and date/time displayed successfully!'
        }
        failure {
            echo 'Pipeline failed.'
        }
    }
}
