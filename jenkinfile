pipeline {
    agent any
    stages {
        stage("build") {
            steps {
                echo 'Building the application...'
            }
        }
        stage("test") {
            steps {
                echo 'Testing the application...'
            }
        }
        stage("deploy") {
            steps {
                script {
                    // Build the Docker image using dockerfile1
                    sh 'docker build -t my_apps -f dockerfile1 .'

                    // Optionally run the Docker container
                    // sh 'docker run -d my_apps'
                }
                echo 'Deploying the application...'
            }
        }
    }
    post {
        success {
            echo 'Pipeline has Passed.'
        }
        failure {
            echo 'Pipeline has Failed.'
        }
    }
}
